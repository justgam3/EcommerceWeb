@page
@model EcommerceWebApp.Areas.Admin.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Member.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Member.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PaymentID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.PaymentID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PostCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.PostCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.StatusDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.StatusDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDetails)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Order.OrderDetails.FirstOrDefault().ProductImagePath)</th>
                    <th>@Html.DisplayNameFor(model => model.Order.OrderDetails.FirstOrDefault().ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.Order.OrderDetails.FirstOrDefault().VariantType)</th>
                    <th>@Html.DisplayNameFor(model => model.Order.OrderDetails.FirstOrDefault().ProductPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.Order.OrderDetails.FirstOrDefault().Quantity)</th>
                    <th>Sub Total</th>
                </tr>
                @foreach (var item in Model.Order.OrderDetails)
                {
                    <tr>
                        <td>
                            <img class="card-img" style="width: 8rem;" src="~/images/@item.ProductImagePath" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VariantType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @(item.ProductPrice * item.Quantity)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>

    <a asp-page="./Edit" asp-route-id="@Model.Order.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>