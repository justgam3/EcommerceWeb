@page
@model EcommerceWebApp.Areas.Admin.Pages.Variants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Html.DisplayFor(model => model.Variant[0].Product.ProductName)</h1>

<p>
    <a asp-page="Create" asp-route-prod_id="@ViewBag.ProductID">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Variant[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Variant[0].Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Variant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-variant_id="@item.ID" asp-route-prod_id="@ViewBag.ProductID">Edit</a> |
                <a asp-page="./Delete" asp-route-variant_id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-area="Admin" asp-page="/Products/Edit" asp-route-id="@ViewBag.ProductID">Back to product</a>
</div>
