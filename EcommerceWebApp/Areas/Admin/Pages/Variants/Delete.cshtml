@page
@model EcommerceWebApp.Areas.Admin.Pages.Variants.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this variant for @Html.DisplayFor(model => model.Variant.Product.ProductName)?</h4>
<div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Variant.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Variant.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Variant.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Variant.Stock)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Variant.ID" />
        <input type="hidden" asp-for="Variant.ProductID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.Variant.ProductID">Back to product's variant(s)</a>
</div>
