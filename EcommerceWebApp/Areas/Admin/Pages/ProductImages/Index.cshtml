@page
@model EcommerceWebApp.Areas.Admin.Pages.ProductImages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Html.DisplayFor(model => model.ProductImage[0].Product.ProductName)</h1>

<p>
    <a asp-page="Create" asp-route-prod_id="@ViewBag.ProductID">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage[0].Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductImage) {
        <tr>
            <td>
                <img class="card-img" style="width: 8rem;" src="~/images/@item.Path" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-area="Admin" asp-page="/Products/Edit" asp-route-id="@ViewBag.ProductID">Back to product</a>
</div>
