@page
@model EcommerceWebApp.Areas.Admin.Pages.ProductImages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this image for @Html.DisplayFor(model => model.ProductImage.Product.ProductName)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class="col-sm-10">
            <img class="card-img" style="width: 8rem;" src="~/images/@Model.ProductImage.Path" />
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProductImage.ID" />
        <input type="hidden" asp-for="ProductImage.ProductID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.ProductImage.ProductID">Back to product's image(s)</a>
</div>