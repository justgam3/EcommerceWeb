@page
@model EcommerceWebApp.Areas.Admin.Pages.ProductCategories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this category for @Html.DisplayFor(model => model.ProductCategory.Product.ProductName)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Category.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProductCategory.ProductID" />
        <input type="hidden" asp-for="ProductCategory.CategoryID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
<div>
    <a asp-page="Index" asp-route-id="@Model.ProductCategory.ProductID">Back to product's categories</a>
</div>
