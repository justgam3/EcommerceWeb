@page
@model EcommerceWebApp.Pages.Purchase_detailModel
@{
}


@if (HttpContext.User.Identity.IsAuthenticated)
{
    <!-- Shoping Cart -->
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2"></th>
                                    <th class="column-3">Price</th>
                                    <th class="column-4">Quantity</th>
                                    <th class="column-5">Total</th>
                                </tr>
                                @foreach (var item in Model.Order.OrderDetails)
                                {
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <div class="how-itemcart1">
                                                <img src="~/images/@item.Variant.Product.ProductImages.FirstOrDefault().Path" alt="IMG">
                                            </div>
                                        </td>
                                        <td class="column-2">@item.Variant.Type - @item.Variant.Product.ProductName</td>
                                        <td class="column-3">$@item.Variant.Product.Price</td>
                                        <td class="column-5">
                                            @item.Quantity
                                        </td>
                                        <td class="column-5">
                                            $@(item.Quantity * item.Variant.Product.Price)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Order details
                        </h4>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30"> 
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Payment ID:
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    @Model.Order.PaymentID
                                </p>
                            </div>

                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Status Description:
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    @Model.Order.StatusDesc
                                </p>
                            </div>

                            <div class="size-208 w-full-ssm pt-3">
                                <span class="stext-110 cl2">
                                    Address:
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm pt-3">
                                <p class="stext-111 cl6 p-t-2">@Model.Order.Country</p>
                                <p class="stext-111 cl6 p-t-2">@Model.Order.State</p>
                                <p class="stext-111 cl6 p-t-2">@Model.Order.PostCode</p>
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">
                                    Total:
                                </span>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2">
                                    $@Model.Order.TotalPrice
                                </span>
                            </div>
                        </div>

                        <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                            LEAVE A REVIEW
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}